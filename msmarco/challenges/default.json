{
  "name": "index-and-search",
  "description": "Indexes msmarco, then executes searches under various conditions",
  "default": true,
  "schedule": [
    {
      "operation": {
        "operation-type": "delete-index"
      }
    },
    {
      "operation": {
        "operation-type": "create-index"
      }
    },
    {
      "operation": {
        "operation-type": "cluster-health",
        "request-params": {
          "wait_for_status": "yellow"
        },
        "retry-until-success": true
      }
    },
    {
      "name": "index-append",
      "operation": {
        "operation-type": "bulk",
        "bulk-size": {{bulk_size | default(500)}},
        "ingest-percentage": 100
      },
      "warmup-time-period": {{ bulk_warmup | default(40) | int }},
      "clients": {{bulk_indexing_clients | default(2)}}
    },
    {
      "name": "refresh-after-index",
      "operation": {
        "operation-type": "refresh",
        "request-timeout": 1000,
        "include-in-reporting": true
      }
    },
    {
      "name": "wait-until-merges-finish-after-index",
      "operation": {
        "operation-type": "index-stats",
        "index": "_all",
        "condition": {
          "path": "_all.total.merges.current",
          "expected-value": 0
        },
        "retry-until-success": true,
        "include-in-reporting": false
      }
    },
    {
      "name": "bm25-passage-search",
      "operation": "bm25-passage-search",
      "warmup-iterations": 100,
      "iterations": 1000
    },
    {
      "name": "bm25-passage-english-search",
      "operation": "bm25-passage-english-search",
      "warmup-iterations": 100,
      "iterations": 1000
    },
    {
      "name": "bm25-passage-search-track-total-hits",
      "operation": "bm25-passage-search-track-total-hits",
      "warmup-iterations": 100,
      "iterations": 1000
    },
    {
      "name": "bm25-passage-english-search-track-total-hits",
      "operation": "bm25-passage-english-search-track-total-hits",
      "warmup-iterations": 100,
      "iterations": 1000
    }
  ]
}
